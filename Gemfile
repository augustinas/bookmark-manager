source 'https://rubygems.org'

ruby '2.2.1'

gem 'sinatra'

group :database do
  gem 'bcrypt-ruby'
  gem 'data_mapper'
  gem 'dm-postgres-adapter'
end

group :server_helpers do
  gem 'rack-flash3'
  gem 'sinatra-partial'
end

group :test do
  gem 'rspec'
  gem 'rubocop-rspec'
  gem 'cucumber'
  gem 'rubocop'
  gem 'coveralls', require: false
  gem 'capybara'
  gem 'byebug'
  gem 'database_cleaner'
end
